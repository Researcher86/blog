{
    "name": "blog",
    "authors": [
        {
            "name": "Tanat",
            "email": "researcher2286@gmail.com"
        }
    ],
    "require": {
        "ext-pdo": "*",
        "aura/router": "^3.1",
        "dasprid/container-interop-doctrine": "^1.1",
        "doctrine/data-fixtures": "^1.3",
        "doctrine/migrations": "^2.0",
        "doctrine/orm": "^2.6",
        "fzaninotto/faker": "^1.8",
        "goaop/framework": "^2.3",
        "monolog/monolog": "^1.24",
        "psr/container": "^1.0",
        "psr/http-message": "^1.0",
        "ramsey/uuid": "^3.8",
        "twig/twig": "^2.0",
        "zendframework/zend-config-aggregator": "^1.1",
        "zendframework/zend-di": "^3.1",
        "zendframework/zend-diactoros": "^2.1",
        "zendframework/zend-httphandlerrunner": "^1.1",
        "zendframework/zend-servicemanager": "^3.4",
        "zendframework/zend-stratigility": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.1"
    },
    "autoload": {
        "psr-4": {
            "Blog\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "server": "php -S 0.0.0.0:81 -t public",
        "test": "phpunit --colors=always",
        "orm-db-create": "doctrine orm:schema-tool:create",
        "orm-db-drop": "doctrine orm:schema-tool:drop --force",
        "orm-db-update": "doctrine orm:schema-tool:update --force",
        "orm-db-validate": "doctrine orm:validate-schema",
        "orm-db-clear-metadata": "doctrine orm:clear-cache:metadata",
        "orm-db-refresh": [
            "@orm-db-clear-metadata",
            "@orm-db-drop",
            "@orm-db-create"
        ],

        "//": [
            "first - Переход до первой версии.",
            "prev - Переход к предыдущей версии.",
            "next - Переход на следующую версию.",
            "latest - Миграция до последней версии."
        ],
        "db-refresh": [
            "doctrine-migrations migrate first --all-or-nothing --no-interaction",
            "doctrine-migrations migrate latest --all-or-nothing --no-interaction",
            "@load-fixture"
        ],
        "migrate": "doctrine-migrations migrate --all-or-nothing --no-interaction --query-time",
        "migrate-create": "doctrine-migrations generate",
        "migrate-diff": "doctrine-migrations diff",

        "load-fixture": "php db/init.php",
        "check": "phpinsights"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    }
}
